<%- include("../partials/nav") %>

<section class="column-center">
  <div class="centerbox">
    <h2>
      Edit <%=employee.name%> <br />
      ID: <%=employee._id%>
    </h2>
    <form action="/employees/<%=employee._id%>?_method=PUT" method="POST">
      <input
        type="text"
        name="name"
        value="<%=employee.name%>"
        placeholder="Name"
        required
      />
      <input
        type="number"
        name="age"
        value="<%=employee.age%>"
        placeholder="Age"
      />
      <input
        type="text"
        name="role"
        value="<%=employee.role%>"
        placeholder="Role"
      />
      <input
        type="number"
        name="salary"
        value="<%=employee.salary%>"
        placeholder="Salary"
      />
      <br />
      <button type="submit">Submit</button>
    </form>
  </div>
</section>

