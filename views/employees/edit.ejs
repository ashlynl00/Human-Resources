<body>
    <%- include ('../partials/samNavbar.ejs') %>
    <div class="container">
        <section class="column-center">
            <div class="centerbox">
                <form action="/employees/<%=employee._id%>?_method=PUT" method="POST">
                    Name: <input type="text" name="name" value="<%=employee.name%>" required>
                    Age: <input type="number" name="age" value="<%=employee.age%>">
                    Role: <input type="text" name="role" value="<%=employee.role%>">
                    Salary: <input type="number" name="salary" value="<%=employee.salary%>">
